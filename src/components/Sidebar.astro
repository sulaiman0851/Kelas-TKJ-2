---
import { getCollection, type CollectionEntry } from 'astro:content';

const { pathname } = Astro.url;
const isBlogRoute = pathname.startsWith('/blog');

// Fetch blog posts if we are on a blog route
let blogPosts: CollectionEntry<'blog'>[] = [];
if (isBlogRoute) {
    const allPosts = await getCollection('blog');
    blogPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 5);
}

const navItems = [
    { href: '/dashboard', label: 'Dashboard', icon: 'layout-dashboard', color: 'blue' },
    { href: '/attendance', label: 'Absensi', icon: 'calendar-check', color: 'emerald' },
    { href: '/game', label: 'Game Room', icon: 'gamepad-2', color: 'purple' },
    { href: '/blog', label: 'Blog', icon: 'book-open', color: 'slate' },
];

const colorClasses: Record<string, string> = {
    blue: 'text-blue-400 bg-blue-600/10 hover:bg-blue-600/20',
    emerald: 'text-emerald-400 bg-emerald-600/10 hover:bg-emerald-600/20',
    purple: 'text-purple-400 bg-purple-600/10 hover:bg-purple-600/20',
    slate: 'text-slate-400 bg-white/5 hover:bg-white/10'
};

const hoverClasses: Record<string, string> = {
    blue: 'hover:text-blue-400 hover:bg-blue-600/10',
    emerald: 'hover:text-emerald-400 hover:bg-emerald-600/10',
    purple: 'hover:text-purple-400 hover:bg-purple-600/10',
    slate: 'hover:text-white hover:bg-white/5'
};

const isActive = (path: string) => {
    if (path === '/dashboard' && pathname === '/dashboard') return true;
    if (path !== '/dashboard' && pathname.startsWith(path)) return true;
    return false;
};

const isBlog = pathname.startsWith('/blog');
---

<aside class={`w-64 bg-slate-900 border-r border-white/5 flex-shrink-0 flex flex-col h-screen fixed left-0 top-0 z-[60] transition-transform duration-300 ${!isBlog ? 'md:translate-x-0' : 'md:-translate-x-full'} -translate-x-full`}>
    <div class="p-6">
        <a href="/dashboard" class="cursor-pointer">
            <h1 class="text-2xl font-black tracking-tight text-white mb-1">KELAS TKJ</h1>
        </a>
        <p class="text-xs text-slate-500 font-mono">SYSTEM v1.0</p>
    </div>

    <nav class="flex-1 px-4 space-y-2">
        {navItems.map(item => {
            const active = isActive(item.href);
            return (
                <a 
                    href={item.href} 
                    class={`flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition-colors cursor-pointer ${
                        active 
                            ? colorClasses[item.color] 
                            : `text-slate-400 ${hoverClasses[item.color]}`
                    }`}
                >
                    {item.label === 'Dashboard' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-layout-dashboard"><rect width="7" height="9" x="3" y="3" rx="1"/><rect width="7" height="5" x="14" y="3" rx="1"/><rect width="7" height="9" x="14" y="12" rx="1"/><rect width="7" height="5" x="3" y="16" rx="1"/></svg>}
                    {item.label === 'Absensi' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-check"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/><path d="m9 16 2 2 4-4"/></svg>}
                    {item.label === 'Game Room' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-gamepad-2"><line x1="6" x2="10" y1="11" y2="11"/><line x1="8" x2="8" y1="9" y2="13"/><line x1="15" x2="15.01" y1="13" y2="13"/><line x1="18" x2="18.01" y1="11" y2="11"/><rect width="20" height="12" x="2" y="6" rx="2"/></svg>}
                    {item.label === 'Blog' && <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>}
                    {item.label}
                </a>
            )
        })}

        <!-- Blog Specific Content -->
        {isBlogRoute && blogPosts.length > 0 && (
            <div class="mt-8 pt-4 border-t border-white/10 px-4">
                <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-4">Artikel Terbaru</p>
                <div class="space-y-4">
                    {blogPosts.map(post => (
                        <a href={`/blog/${post.slug}`} class="block group">
                            <p class={`text-sm line-clamp-2 transition-colors ${pathname.includes(post.slug) ? 'text-blue-400 font-bold' : 'text-slate-400 group-hover:text-white'}`}>
                                {post.data.title}
                            </p>
                            <p class="text-[10px] text-slate-600 mt-1 uppercase font-medium">{post.data.pubDate.toLocaleDateString('id-ID', { month: 'short', day: 'numeric' })}</p>
                        </a>
                    ))}
                </div>
            </div>
        )}

        <!-- Admin Features Section -->
        <div id="admin-section" class="hidden mt-4 pt-4 border-t border-white/10">
            <p class="px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">Admin Features</p>
            <a 
                href="/admin/users" 
                class={`flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition-colors cursor-pointer ${
                    pathname.startsWith('/admin/users') 
                        ? 'bg-blue-600/10 text-blue-400' 
                        : 'text-slate-400 hover:bg-white/5 hover:text-white'
                }`}
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                User Management
            </a>
            <a 
                href="/admin/manage-content" 
                class={`flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition-colors cursor-pointer ${
                    pathname.startsWith('/admin/manage-content') 
                        ? 'bg-blue-600/10 text-blue-400' 
                        : 'text-slate-400 hover:bg-white/5 hover:text-white'
                }`}
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/><path d="m15 5 4 4"/></svg>
                Manage Content
            </a>
        </div>
    </nav>

    <div class="p-4 border-t border-white/5">
        <button id="logout-btn" class="flex items-center gap-3 px-4 py-2 w-full text-slate-400 hover:text-red-400 transition-colors cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-log-out"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" x2="9" y1="12" y2="12"/></svg>
            Keluar
        </button>
    </div>
</aside>

<script>
    import { supabase } from '../lib/supabase';

    async function checkAdmin() {
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) return;

        const { data: userRoles } = await supabase
            .from('user_roles')
            .select('*, roles(*)')
            .eq('user_id', session.user.id);
        
        const isAdmin = userRoles?.some((ur: any) => ur.roles?.name === 'admin');
        if (isAdmin) {
            const adminSection = document.getElementById('admin-section');
            if (adminSection) {
                adminSection.classList.remove('hidden');
            }
        }
    }

    // Logout handler
    document.getElementById('logout-btn')?.addEventListener('click', async () => {
        await supabase.auth.signOut();
        window.location.href = '/login';
    });

    checkAdmin();

    // Re-run on view transitions
    document.addEventListener('astro:after-swap', checkAdmin);
</script>
