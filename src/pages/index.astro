    const logoJS = document.getElementById('logo-js');
    const logoReact = document.getElementById('logo-react');

    function updateLogoRotation() {
        const scrollY = window.scrollY;

        // Python - rotates right + moves right
        if (logoPython) {
            const rotateY = scrollY * 0.5;
            const translateX = scrollY * 0.3;
            const translateY = scrollY * 0.1;
            logoPython.style.transform = `translateX(${translateX}px) translateY(${translateY}px) rotateY(${rotateY}deg)`;
        }

        // PHP - rotates left + moves left
        if (logoPHP) {
            const rotateY = -scrollY * 0.4;
            const translateX = -scrollY * 0.25;
            const translateY = scrollY * 0.15;
            logoPHP.style.transform = `translateX(${translateX}px) translateY(${translateY}px) rotateY(${rotateY}deg)`;
        }

        // Node.js - rotates + moves up
        if (logoNodeJS) {
            const rotateY = scrollY * 0.6;
            const rotateX = scrollY * 0.2;
            const translateX = scrollY * 0.2;
            const translateY = -scrollY * 0.1;
            logoNodeJS.style.transform = `translateX(${translateX}px) translateY(${translateY}px) rotateY(${rotateY}deg) rotateX(${rotateX}deg)`;
        }

        // JavaScript - rotates opposite + moves diagonal
        if (logoJS) {
            const rotateY = -scrollY * 0.55;
            const translateX = -scrollY * 0.35;
            const translateY = scrollY * 0.2;
            logoJS.style.transform = `translateX(${translateX}px) translateY(${translateY}px) rotateY(${rotateY}deg)`;
        }

        // React - spins fast (atom style!)
        if (logoReact) {
            const rotateZ = scrollY * 0.8;
            const translateX = Math.sin(scrollY * 0.01) * 50;
            const translateY = scrollY * 0.05;
            logoReact.style.transform = `translateX(${translateX}px) translateY(${translateY}px) rotate(${rotateZ}deg)`;
        }
    }

    // Parallax effect for floating icons and giant text
    const floatingIcons = document.querySelectorAll('.floating-icon');
    const giantText = document.getElementById('giant-text');
    let ticking = false;

    function updateParallax() {
        const scrollY = window.scrollY;

        // Move floating icons at different speeds
        floatingIcons.forEach((icon) => {
            const speed = parseFloat(icon.getAttribute('data-speed') || '0.5');
            const direction = parseFloat(icon.getAttribute('data-direction') || '1');
            const yOffset = scrollY * speed * direction;
            const xOffset = scrollY * speed * 0.3 * direction;
            (icon as HTMLElement).style.transform = `translate(${xOffset}px, ${yOffset}px)`;
        });

        // Move giant text
        if (giantText) {
            const rotation = -5 + (scrollY * 0.01);
            const scale = 1.2 - (scrollY * 0.0003);
            const yOffset = scrollY * 0.5;
            giantText.style.transform = `translateY(${yOffset}px) rotate(${rotation}deg) scale(${Math.max(scale, 0.8)})`;
            giantText.style.opacity = `${Math.max(0.5 - scrollY * 0.001, 0.1)}`;
        }

        ticking = false;
    }

    window.addEventListener('scroll', () => {
        if (!ticking) {
            requestAnimationFrame(() => {
                updateParallax();
                updateLogoRotation();
            });
            ticking = true;
        }
    });

    // Initial logo rotation on load
    updateLogoRotation();

    // Counter animation for stats
    const statNumbers = document.querySelectorAll('[data-count]');
    const observerOptions = { threshold: 0.5 };

    const countObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const target = entry.target as HTMLElement;
                const countTo = parseInt(target.getAttribute('data-count') || '0');
                let current = 0;
                const increment = countTo / 50;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= countTo) {
                        target.textContent = countTo.toString();
                        clearInterval(timer);
                    } else {
                        target.textContent = Math.floor(current).toString();
                    }
                }, 30);
                countObserver.unobserve(target);
            }
        });
    }, observerOptions);

    statNumbers.forEach(num => countObserver.observe(num));

    // Mouse move effect for feature cards
    document.querySelectorAll('[data-tilt]').forEach(card => {
        card.addEventListener('mousemove', (e: any) => {
            const rect = (card as HTMLElement).getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            const rotateX = (y - centerY) / 20;
            const rotateY = (centerX - x) / 20;
            (card as HTMLElement).style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-10px)`;
        });
        card.addEventListener('mouseleave', () => {
            (card as HTMLElement).style.transform = 'perspective(1000px) rotateX(0) rotateY(0) translateY(0)';
        });
    });

