---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="CV Creator - Pro Platform">
    <div class="max-w-[1600px] mx-auto px-6 py-12">
        <header class="flex flex-col md:flex-row justify-between items-center mb-12 gap-8 border-b border-white/5 pb-12">
            <div class="text-center md:text-left">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 text-[10px] font-black uppercase tracking-[0.3em] mb-4">
                    Professional Tool
                </div>
                <h1 class="text-6xl font-black text-white tracking-tighter mb-2">CV <span class="text-emerald-500">Architect</span></h1>
                <p class="text-slate-500 font-medium">Bangun resume profesional Anda dengan standar industri teknologi terkini.</p>
            </div>
            <div class="flex flex-wrap justify-center gap-4">
                <button id="export-pdf-btn" class="px-10 py-5 bg-gradient-to-br from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white rounded-[2rem] font-black shadow-2xl shadow-emerald-600/30 transition-all flex items-center gap-3 active:scale-95 group">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" class="group-hover:translate-y-1 transition-transform"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
                    EXPORT PDF
                </button>
                <div class="flex gap-2 bg-slate-900 border border-white/5 p-2 rounded-full">
                    <button onclick="changeTemplate('classic')" class="px-6 py-3 rounded-full text-[10px] font-black uppercase tracking-widest transition-all bg-white text-black">Classic</button>
                    <button onclick="changeTemplate('modern')" class="px-6 py-3 rounded-full text-[10px] font-black uppercase tracking-widest transition-all text-slate-500 hover:text-white">Modern</button>
                    <button onclick="changeTemplate('minimal')" class="px-6 py-3 rounded-full text-[10px] font-black uppercase tracking-widest transition-all text-slate-500 hover:text-white">Minimal</button>
                </div>
            </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
            <!-- Left: Editor Forms -->
            <div class="space-y-10">
                <!-- Data Diri -->
                <section class="bg-slate-900/50 border border-white/5 rounded-[3rem] p-10 backdrop-blur-3xl relative overflow-hidden group">
                    <div class="absolute -top-12 -right-12 w-32 h-32 bg-emerald-500/5 rounded-full blur-3xl group-hover:bg-emerald-500/10 transition-all"></div>
                    <h3 class="text-xl font-black text-white mb-8 flex items-center gap-3">
                        <div class="w-10 h-10 bg-emerald-500/10 rounded-2xl flex items-center justify-center text-emerald-500">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                        </div>
                        Informasi Personal
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                             <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest block ml-1">Nama Lengkap</label>
                             <input type="text" data-field="name" class="cv-input w-full bg-slate-950 border border-white/10 rounded-2xl px-6 py-4 text-white focus:ring-2 focus:ring-emerald-500/50 outline-none transition-all" placeholder="John Doe">
                        </div>
                        <div class="space-y-2">
                             <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest block ml-1">Profesi</label>
                             <input type="text" data-field="title" class="cv-input w-full bg-slate-950 border border-white/10 rounded-2xl px-6 py-4 text-white focus:ring-2 focus:ring-emerald-500/50 outline-none transition-all" placeholder="Frontend Developer">
                        </div>
                        <div class="space-y-2">
                             <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest block ml-1">Email</label>
                             <input type="email" data-field="email" class="cv-input w-full bg-slate-950 border border-white/10 rounded-2xl px-6 py-4 text-white focus:ring-2 focus:ring-emerald-500/50 outline-none transition-all" placeholder="hello@example.com">
                        </div>
                        <div class="space-y-2">
                             <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest block ml-1">Telepon</label>
                             <input type="text" data-field="phone" class="cv-input w-full bg-slate-950 border border-white/10 rounded-2xl px-6 py-4 text-white focus:ring-2 focus:ring-emerald-500/50 outline-none transition-all" placeholder="+62 812...">
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest block ml-1">Alamat / Lokasi</label>
                        <input type="text" data-field="address" class="cv-input w-full bg-slate-950 border border-white/10 rounded-2xl px-6 py-4 text-white focus:ring-2 focus:ring-emerald-500/50 outline-none transition-all" placeholder="Jakarta, Indonesia">
                    </div>
                </section>

                <!-- Riwayat Pengalaman -->
                <section class="bg-slate-900/50 border border-white/5 rounded-[3rem] p-10 backdrop-blur-3xl">
                    <div class="flex justify-between items-center mb-8">
                        <h3 class="text-xl font-black text-white flex items-center gap-3">
                            <div class="w-10 h-10 bg-blue-500/10 rounded-2xl flex items-center justify-center text-blue-500">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>
                            </div>
                            Pengalaman Kerja
                        </h3>
                        <button onclick="addItem('experience')" class="p-4 bg-white/5 hover:bg-white/10 rounded-2xl text-white transition-all">
                             <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M12 5v14"/><path d="M5 12h14"/></svg>
                        </button>
                    </div>
                    <div id="experience-inputs" class="space-y-6">
                        <!-- Dynamic items here -->
                    </div>
                </section>

                <!-- Pendidikan & Keahlian -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <section class="bg-slate-900/50 border border-white/5 rounded-[3rem] p-8 backdrop-blur-3xl">
                         <div class="flex justify-between items-center mb-6">
                            <h3 class="text-xs font-black text-white uppercase tracking-widest">Pendidikan</h3>
                            <button onclick="addItem('education')" class="p-3 bg-white/5 hover:bg-white/10 rounded-xl text-white transition-all">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M12 5v14"/><path d="M5 12h14"/></svg>
                            </button>
                        </div>
                        <div id="education-inputs" class="space-y-4"></div>
                    </section>
                    <section class="bg-slate-900/50 border border-white/5 rounded-[3rem] p-8 backdrop-blur-3xl">
                         <div class="flex justify-between items-center mb-6">
                            <h3 class="text-xs font-black text-white uppercase tracking-widest">Skill / Keahlian</h3>
                        </div>
                        <textarea data-field="skills" class="cv-input w-full bg-slate-950 border border-white/10 rounded-2xl px-6 py-4 text-white focus:ring-2 focus:ring-emerald-500/50 outline-none transition-all text-sm h-40 resize-none" placeholder="Pisahkan dengan koma: Web Design, Node.js, Project Management..."></textarea>
                    </section>
                </div>
            </div>

            <!-- Right: Live Preview -->
            <div class="lg:sticky lg:top-12">
                <div class="text-[10px] font-black text-slate-500 uppercase tracking-[0.4em] mb-4 flex justify-between px-6">
                    Live Professional Preview
                    <span class="text-emerald-500">Real-time update</span>
                </div>
                <!-- The actual CV template for export -->
                <div class="bg-white rounded-3xl overflow-hidden shadow-[0_0_80px_rgba(0,0,0,0.5)] border border-white/10 scale-[0.9] origin-top transition-all" id="cv-canvas-container">
                    <div id="cv-paper" class="bg-white min-h-[1122px] w-[793px] text-slate-900 p-16 font-serif">
                        <div id="template-classic">
                            <header class="text-center mb-12">
                                <h1 id="pv-name" class="text-4xl font-black uppercase tracking-tight text-slate-900">MASUKKAN NAMA ANDA</h1>
                                <p id="pv-title" class="text-lg font-bold text-slate-500 mt-2 uppercase tracking-widest">PROFESI ANDA</p>
                                <div class="flex justify-center gap-6 mt-6 text-xs text-slate-400 font-bold border-y py-4 border-slate-100">
                                    <span id="pv-email">email@example.com</span>
                                    <span id="pv-phone">+62 123...</span>
                                    <span id="pv-address">Lokasi Anda</span>
                                </div>
                            </header>

                            <div class="grid grid-cols-3 gap-12">
                                <div class="col-span-2 space-y-12">
                                    <section>
                                        <h3 class="text-sm font-black uppercase text-slate-900 mb-6 border-b-2 border-slate-900 pb-2 flex items-center gap-2">
                                            Pengalaman Profesional
                                        </h3>
                                        <div id="pv-experience" class="space-y-8">
                                            <div class="text-slate-300 italic text-sm">Belum ada data pengalaman...</div>
                                        </div>
                                    </section>
                                </div>
                                <div class="col-span-1 space-y-12">
                                     <section>
                                        <h3 class="text-sm font-black uppercase text-slate-900 mb-6 border-b-2 border-slate-900 pb-2">Keahlian Utama</h3>
                                        <div id="pv-skills" class="flex flex-wrap gap-2">
                                            <span class="text-xs text-slate-400 italic">Belum ada skill...</span>
                                        </div>
                                    </section>
                                    <section>
                                        <h3 class="text-sm font-black uppercase text-slate-900 mb-6 border-b-2 border-slate-900 pb-2">Pendidikan</h3>
                                        <div id="pv-education" class="space-y-6">
                                            <div class="text-slate-300 italic text-sm">Belum ada data pendidikan...</div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

<script>
    let cvData: any = {
        name: '', title: '', email: '', phone: '', address: '',
        experience: [],
        education: [],
        skills: ''
    };

    let activeTemplate = 'classic';

    // Item Management
    (window as any).addItem = (type: string) => {
        const id = Math.random().toString(36).substr(2, 9);
        const item = { id, title: '', company: '', period: '', desc: '' };
        if (type === 'experience') cvData.experience.push(item);
        else cvData.education.push(item);
        renderForms();
        updatePreview();
    };

    (window as any).removeItem = (type: string, id: string) => {
        if (type === 'experience') cvData.experience = cvData.experience.filter((x:any) => x.id !== id);
        else cvData.education = cvData.education.filter((x:any) => x.id !== id);
        renderForms();
        updatePreview();
    };

    function renderForms() {
        const expContainer = document.getElementById('experience-inputs');
        const eduContainer = document.getElementById('education-inputs');
        
        if (expContainer) {
            expContainer.innerHTML = cvData.experience.map((e:any) => `
                <div class="p-6 bg-slate-950 border border-white/5 rounded-2xl space-y-4 animate-in fade-in slide-in-from-bottom-2">
                    <div class="flex justify-between gap-4">
                        <input type="text" placeholder="Gelar / Posisi" class="flex-1 bg-transparent border-b border-white/10 outline-none text-white p-2 text-sm" oninput="updateItem('experience', '${e.id}', 'title', this.value)" value="${e.title}">
                        <button onclick="removeItem('experience', '${e.id}')" class="text-red-500 hover:text-red-400 p-2 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                        </button>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="text" placeholder="Perusahaan / Lokasi" class="bg-transparent border-b border-white/10 outline-none text-slate-400 p-2 text-xs" oninput="updateItem('experience', '${e.id}', 'company', this.value)" value="${e.company}">
                        <input type="text" placeholder="Periode (Misal: 2021 - Present)" class="bg-transparent border-b border-white/10 outline-none text-slate-400 p-2 text-xs" oninput="updateItem('experience', '${e.id}', 'period', this.value)" value="${e.period}">
                    </div>
                    <textarea placeholder="Deskripsi Singkat" class="w-full bg-white/5 rounded-xl p-3 text-xs text-slate-400 h-20 outline-none focus:ring-1 focus:ring-emerald-500/50" oninput="updateItem('experience', '${e.id}', 'desc', this.value)">${e.desc}</textarea>
                </div>
            `).join('');
        }

        if (eduContainer) {
             eduContainer.innerHTML = cvData.education.map((e:any) => `
                <div class="p-6 bg-slate-950 border border-white/5 rounded-2xl relative animate-in fade-in slide-in-from-bottom-2">
                    <button onclick="removeItem('education', '${e.id}')" class="absolute right-4 top-4 text-red-500/50 hover:text-red-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                    </button>
                    <input type="text" placeholder="Instansi" class="w-full bg-transparent border-b border-white/10 outline-none text-white p-2 text-sm mb-2" oninput="updateItem('education', '${e.id}', 'company', this.value)" value="${e.company}">
                    <input type="text" placeholder="Jurusan / Gelar" class="w-full bg-transparent border-b border-white/10 outline-none text-slate-400 p-2 text-xs mb-2" oninput="updateItem('education', '${e.id}', 'title', this.value)" value="${e.title}">
                    <input type="text" placeholder="Tahun" class="w-full bg-transparent border-b border-white/10 outline-none text-slate-500 p-2 text-[10px]" oninput="updateItem('education', '${e.id}', 'period', this.value)" value="${e.period}">
                </div>
            `).join('');
        }
    }

    (window as any).updateItem = (type: string, id: string, field: string, value: string) => {
        const item = cvData[type].find((x:any) => x.id === id);
        if (item) item[field] = value;
        updatePreview();
    };

    function updatePreview() {
        // Simple data
        ['name', 'title', 'email', 'phone', 'address'].forEach(f => {
            const el = document.getElementById(`pv-${f}`);
            if (el) el.innerText = cvData[f] || (f === 'name' ? 'MASUKKAN NAMA ANDA' : '');
        });

        // Experience
        const pvExp = document.getElementById('pv-experience');
        if (pvExp) {
            pvExp.innerHTML = cvData.experience.length ? cvData.experience.map((e:any) => `
                <div class="space-y-2">
                    <div class="flex justify-between items-baseline">
                        <h4 class="font-black text-slate-900 uppercase tracking-tight">${e.title || 'POSISI'}</h4>
                        <span class="text-[10px] font-black uppercase text-slate-400">${e.period || 'PERIODE'}</span>
                    </div>
                    <div class="text-xs font-bold text-emerald-600 uppercase tracking-widest">${e.company || 'PERUSAHAAN'}</div>
                    <p class="text-xs leading-loose text-slate-500 font-medium">${e.desc || ''}</p>
                </div>
            `).join('') : '<div class="text-slate-300 italic text-sm">Belum ada data pengalaman...</div>';
        }

        // Education
        const pvEdu = document.getElementById('pv-education');
        if (pvEdu) {
            pvEdu.innerHTML = cvData.education.length ? cvData.education.map((e:any) => `
                <div class="space-y-1">
                    <div class="text-sm font-black text-slate-900">${e.company || 'INSTANSI'}</div>
                    <div class="text-xs font-bold text-slate-500">${e.title || 'GELAR'}</div>
                    <div class="text-[10px] font-bold text-slate-300">${e.period || ''}</div>
                </div>
            `).join('') : '<div class="text-slate-300 italic text-sm text-center">Data pendidikan kosong</div>';
        }

        // Skills
        const pvSkills = document.getElementById('pv-skills');
        if (pvSkills) {
            const list = cvData.skills.split(',').map((s:any) => s.trim()).filter((s:any) => s);
            pvSkills.innerHTML = list.length ? list.map((s:any) => `
                <span class="px-3 py-1.5 flex items-center justify-center border-2 border-slate-900 text-[10px] font-black uppercase tracking-widest text-slate-900">
                    ${s}
                </span>
            `).join('') : '<span class="text-xs text-slate-300 italic">No skills listed</span>';
        }
    }

    // Input Listeners
    document.querySelectorAll('.cv-input').forEach((input: any) => {
        input.addEventListener('input', (e: any) => {
            const field = e.target.dataset.field;
            cvData[field] = e.target.value;
            updatePreview();
        });
    });

    // Template Management
    (window as any).changeTemplate = (name: string) => {
        activeTemplate = name;
        const paper = document.getElementById('cv-paper');
        if (!paper) return;

        // Reset styles and classes
        paper.className = "bg-white min-h-[1122px] w-[793px] text-slate-900 p-16";
        
        if (name === 'classic') {
            paper.style.fontFamily = "'Playfair Display', serif";
        } else if (name === 'modern') {
            paper.style.fontFamily = "'Outfit', sans-serif";
            paper.classList.add('bg-slate-50');
        } else {
            paper.style.fontFamily = "'Inter', sans-serif";
        }

        // Update nav buttons
        const btns = document.querySelectorAll('button[onclick^="changeTemplate"]');
        btns.forEach(b => {
            b.className = "px-6 py-3 rounded-full text-[10px] font-black uppercase tracking-widest transition-all text-slate-500 hover:text-white";
            if (b.getAttribute('onclick')?.includes(name)) {
                b.className = "px-6 py-3 rounded-full text-[10px] font-black uppercase tracking-widest transition-all bg-white text-black";
            }
        });

        updatePreview();
    };

    // PDF Export
    document.getElementById('export-pdf-btn')?.addEventListener('click', () => {
        const element = document.getElementById('cv-paper');
        const opt = {
            margin:       0,
            filename:     `${cvData.name || 'CV'}_Professional.pdf`,
            image:        { type: 'jpeg', quality: 1 },
            html2canvas:  { scale: 2, useCORS: true, letterRendering: true },
            jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }
        };
        // @ts-ignore
        html2pdf().set(opt).from(element).save();
    });

    // Initial item
    window.onload = () => {
        renderForms();
        updatePreview();
    };
</script>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=Outfit:wght@500;800;900&family=Inter:wght@400;700;900&display=swap');

    #cv-paper {
        box-shadow: 0 0 40px rgba(0,0,0,0.1);
    }
    .cv-input::placeholder {
        color: #334155;
    }
    [contenteditable]:focus {
        outline: none;
    }
</style>
