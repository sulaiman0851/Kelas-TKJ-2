---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

export const prerender = false;

const { data: resources } = await supabase
    .from('resources')
    .select('*')
    .order('created_at', { ascending: false });

const categories = ['All', 'ISO', 'PDF', 'Config', 'Software', 'Tutorial'];
---

<Layout title="Resource Hub - Kelas TKJ">
    <div class="max-w-7xl mx-auto px-6 py-12">
        <header class="flex flex-col md:flex-row justify-between items-end gap-6 mb-16">
            <div class="max-w-2xl">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyan-500/10 border border-cyan-500/20 text-cyan-400 text-[10px] font-black uppercase tracking-widest mb-4">
                    <span class="w-1.5 h-1.5 rounded-full bg-cyan-500 animate-pulse"></span>
                    Cyber Library
                </div>
                <h1 class="text-6xl font-black text-white tracking-tighter mb-6 underline decoration-cyan-500/30">Resource Hub</h1>
                <p class="text-lg text-slate-400 leading-relaxed">Pusat distribusi materi, software, dan konfigurasi teknis untuk keluarga besar Kelas TKJ.</p>
            </div>
            
            <div class="flex flex-wrap gap-2" id="filter-container">
                {categories.map(cat => (
                    <button 
                        data-category={cat}
                        class="category-btn px-6 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest border border-white/5 bg-slate-900 text-slate-500 hover:text-white transition-all cursor-pointer"
                    >
                        {cat}
                    </button>
                ))}
            </div>
        </header>

        <div id="resource-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {resources?.map(res => (
                <div class="resource-card group bg-slate-900/50 border border-white/5 rounded-3xl p-8 hover:border-cyan-500/30 transition-all duration-500 relative overflow-hidden" data-category={res.category}>
                    <div class="absolute -right-4 -top-4 w-24 h-24 bg-cyan-500/5 rounded-full blur-2xl group-hover:bg-cyan-500/10 transition-all"></div>
                    
                    <div class="flex justify-between items-start mb-6">
                        <div class="p-4 rounded-2xl bg-cyan-500/10 text-cyan-400 group-hover:scale-110 transition-transform duration-500">
                            {res.category === 'ISO' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><circle cx="12" cy="12" r="10"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="M2 12h2"/><path d="M20 12h2"/></svg>}
                            {res.category === 'PDF' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><line x1="10" y1="9" x2="8" y2="9"/></svg>}
                            {res.category === 'Config' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.1a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>}
                            {(!['ISO', 'PDF', 'Config'].includes(res.category)) && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>}
                        </div>
                        <span class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-[8px] font-black text-slate-500 uppercase tracking-widest">{res.category}</span>
                    </div>

                    <h3 class="text-xl font-black text-white mb-2 group-hover:text-cyan-400 transition-colors uppercase tracking-tight">{res.title}</h3>
                    <p class="text-sm text-slate-500 leading-relaxed mb-8 line-clamp-2">{res.description}</p>
                    
                    <div class="flex items-center justify-between pt-6 border-t border-white/5">
                        <div class="flex items-center gap-2">
                             <div class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" class="text-slate-500"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                             </div>
                             <span class="text-[10px] font-black text-slate-600 uppercase tracking-tighter">{res.download_count} Downloads</span>
                        </div>
                        <a 
                            href={res.file_url} 
                            target="_blank"
                            class="flex items-center gap-2 px-5 py-2.5 bg-cyan-600 hover:bg-cyan-500 text-white rounded-xl text-[10px] font-black uppercase tracking-widest shadow-lg shadow-cyan-600/20 transition-all active:scale-95"
                            data-resid={res.id}
                        >
                            Download
                        </a>
                    </div>
                </div>
            ))}
            
            {(!resources || resources.length === 0) && (
                <div class="col-span-full py-20 text-center bg-slate-900/30 border border-dashed border-white/10 rounded-[3rem]">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="mx-auto text-slate-700 mb-6 opacity-50"><path d="M4 14.899A7 7 0 1 1 15.71 8h1.79a4.5 4.5 0 0 1 2.5 8.242"/><path d="M12 12v9"/><path d="m8 17 4 4 4-4"/></svg>
                    <h3 class="text-xl font-black text-slate-500 uppercase">Library Masih Kosong</h3>
                    <p class="text-slate-600 text-sm mt-2">Materi sedang diunggah oleh Admin Kelas.</p>
                </div>
            )}
        </div>
    </div>
</Layout>

<script>
    import { supabase } from '../lib/supabase';

    // Filter Logic
    const filterBtns = document.querySelectorAll('.category-btn');
    const cards = document.querySelectorAll('.resource-card');

    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const cat = btn.getAttribute('data-category');
            
            // UI Toggle
            filterBtns.forEach(b => {
                b.classList.remove('bg-cyan-600', 'text-white', 'border-cyan-500');
                b.classList.add('bg-slate-900', 'text-slate-500', 'border-white/5');
            });
            btn.classList.add('bg-cyan-600', 'text-white', 'border-cyan-500');
            btn.classList.remove('bg-slate-900', 'text-slate-500', 'border-white/5');

            // Filtering
            cards.forEach(card => {
                if (cat === 'All' || card.getAttribute('data-category') === cat) {
                    (card as HTMLElement).style.display = 'block';
                } else {
                    (card as HTMLElement).style.display = 'none';
                }
            });
        });
    });

    // Default select 'All'
    (document.querySelector('[data-category="All"]') as HTMLElement)?.click();

    // Track Downloads
    document.querySelectorAll('[data-resid]').forEach(btn => {
        btn.addEventListener('click', async () => {
            const id = btn.getAttribute('data-resid');
            await supabase.rpc('increment_download_count', { resource_id: id });
        });
    });
</script>
